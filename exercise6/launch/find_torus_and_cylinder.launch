<?xml version="1.0"?>
<launch>

    <node pkg="exercise6" type="cylinder_and_ring_detector" name="cylinder_and_ring_detector">

        <remap from="input" to="/exercise6/voxelgrid"/>
                                                                <!-- Values given by teaching assitants -->
        <param name="normal_distance_weight" value="0.1" />  <!-- 0.1 -->
        <param name="max_iterations" value="10000" />   <!-- 10000 -->
        <param name="distance_threshold" value="0.05" />   <!-- 0.05 -->
        <param name="radius_min" value="0.11" />    <!-- 0.06 -->
        <param name="radius_max" value="0.13" />    <!-- 0.2 -->
        <param name="cylinder_points_threshold" value="700"/>

        <param name="plane_points_threshold" value="500" />
    </node>

    <!-- Node that makes the cloud point sparser -->
    <node pkg="exercise6" type="voxelgrid" name="voxelgrid" output="screen">

        <remap from="input" to="/camera/depth/points"/>
        <remap from="output" to="/exercise6/voxelgrid"/>

        <!-- Leaf size in meters -->
        <param name="leaf_size_x" value="0.01"/> <!-- 0.01 -->
        <param name="leaf_size_y" value="0.01"/> <!-- 0.01 -->
        <param name="leaf_size_z" value="0.01"/> <!-- 0.01 -->

    </node>

</launch>
